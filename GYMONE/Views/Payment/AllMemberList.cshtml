@model GYMONE.Models.PaymentlistingDTO
@{
    ViewBag.Title = "AllMemberList";
}
@using GridMvc.Html




<script src="~/Scripts/jquery-1.11.1.js"></script>
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />


<div class="container">
    <div style="margin-top: 10px"></div>


    <div class="logo col-sm-12 text-center col-md-12 ">
        
    </div>

    <div class="clearfix"></div>

    <fieldset>

        <legend class="legend">Todos los Miembros</legend>
        <div style="margin-top: 5px"></div>

        <div class="test" style="overflow: scroll; height: 500px; width: 1000px">
            <div style="width: 1000px">

                <div class="panel">

                    <div class="panel-body">


                        @Html.Grid(Model.PaymentList).Columns(columns =>
                    {
                        columns.Add(c => c.MemberReg).Titled("Numero de Miembro").Filterable(true);
                        columns.Add(c => c.Name).Titled("Nombre").Filterable(true);
                        columns.Add(c => c.JoiningDate).Titled("Fecha de Ingreso").Filterable(true).Format("{0:dd/MM/yyyy}");
                        columns.Add(c => c.RenwalDate).Titled("Fecha de Renovación").Filterable(true).Format("{0:dd/MM/yyyy}");
                        columns.Add(c => c.Contactno).Titled("Número de Contacto").Filterable(true);
                        columns.Add(c => c.PlanName).Titled("Nombre del Plan").Filterable(true);
                        columns.Add(c => c.SchemeName).Titled("Nombre del Esquema").Filterable(true);
                        columns.Add(c => c.PaymentAmount).Titled("Importe").Filterable(true);
 

                    }).WithPaging(10).Sortable(true)
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

</div>

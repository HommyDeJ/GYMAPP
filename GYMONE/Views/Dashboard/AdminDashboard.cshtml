@{
    ViewBag.Title = "Admin Dashboard";
}
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />


<div class="container">

    <div class="logo col-sm-12 text-center col-md-12 ">
        
    </div>
    <div class="clearfix"></div>
    <fieldset>

        <legend>Panel de administración</legend>

        <div class="panel">

            <div class="panel-body">
              
                <div class="col-md-3 dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-user"></span>
                    @Html.ActionLink("Crear Cuenta de Usuario", "Register", "Account")
                </div>
                  <div class="col-md-3 dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-pencil"></span>
                    @Html.ActionLink("Crear Esquema", "Create", "Scheme")
                </div>
                <div class="col-md-3 dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-pencil"></span>
                    @Html.ActionLink("Crear Plan", "Create", "Plan")
                </div>


                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-pencil"></span>
                    @Html.ActionLink("Crear Rol", "RoleCreate", "Account")
                </div>
                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-remove"></span>
                    @Html.ActionLink("Eliminar Rol", "DeleteRoleForUser", "Account")
                </div>
                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-pawn"></span>
                    @Html.ActionLink("Lista de Todos los Roles Asignados", "DisplayAllUserroles", "Account")
                </div>
                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-list"></span>
                    @Html.ActionLink("Lista de Todos los Usuarios", "AllRegisterUserDetails", "Account")
                </div>
              


                <div class="col-md-3 dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-indent-left"></span>
                    @Html.ActionLink("Lista de Todos los Roles", "RoleIndex", "Account")
                </div>

                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-random"></span>
                    @Html.ActionLink("Asignar Función al Usuario", "RoleAddToUser", "Account")
                </div>



                 <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-download-alt"></span>
                    @Html.ActionLink("Informe Anual ", "YearwiseReport", "YearwiseCollection")
                </div>
                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-download-alt"></span>
                    @Html.ActionLink("Informe Mensual ", "MonthwiseReport", "MonthwiseCollection")
                </div>
                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-download-alt"></span>
                    @Html.ActionLink("Detalles del Informe de Miembro", "DetailsMemberReport", "DetailsReport")
                </div>
                <div class="col-md-3  dashboard-icon col-sm-3">
                    <span class="glyphicon glyphicon-list"></span>
                    @Html.ActionLink("Todos los miembros ", "AllMemberList", "Payment")
                </div>
            </div>
        </div>
    </fieldset>

</div>

@model GYMONE.Models.AllroleandUser
@{
    ViewBag.Title = "DisplayAllUserroles";
}

@using GridMvc.Html


<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
<link href="~/Content/Site.css" rel="stylesheet" />

<div class="container">
   <div class="logo col-sm-12 text-center col-md-12 ">
        
    <div class="clearfix"></div>
    <fieldset>
        <legend class="legend">Mostrar Todos los Roles de Usuario</legend>


         <div class="panel">
  
    <div class="panel-body">

        <div>
                        @Html.ActionLink("Asignar Función al Usuario", "RoleAddToUser", "Account", new { @class = "btn btn-info btn-pressure" }) 

            </div>

        @Html.Grid(Model.AllDetailsUserlist).Columns(columns =>
                    {

                        columns.Add(c => c.UserName).Titled("Usuario").Filterable(true).Encoded(false)
        .Sanitized(false).SetWidth(50);
                        columns.Add(c => c.RoleName).Titled("Rol").Filterable(true).Encoded(false)
     .Sanitized(false).SetWidth(50);
                    }).WithPaging(10)
        </div>
             </div>
    </fieldset>
</div>
